<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Año:</strong>
  <%= @project.year %>
</p>

<p>
  <strong>Número Proyecto:</strong>
  <%= @project.project_number %>
</p>

<p>
  <strong>Objectivo:</strong>
  <%= @project.objective %>
</p>

<p>
  <strong>Encargados Internos:</strong>
  <% @project.users.each do |user| %>
    <p style="padding-left: 1vw"><%= user.name %></p>
  <% end %>
</p>

<p>
  <strong>Responsables Externos:</strong>
  <% @project.employees.each do |employee| %>
    <p style="padding-left: 1vw"><%= employee.info %></p>
  <% end %>
</p>

<p>
  <strong>Privacidad:</strong>
  <%= @project.privacy %>
</p>

<p>
  <strong>Estado:</strong>
  <%= @project.state %>
</p>

<p>
  <strong>Fecha Inicio:</strong>
  <%= @project.start_date %>
</p>

<p>
  <strong>Fecha Estimada de Término:</strong>
  <%= @project.estimated_end_date %>
</p>

<p>
  <strong>Fecha de Término:</strong>
  <%= @project.end_date %>
</p>



<%= link_to 'Agregar Tarea', new_task_url(theme_id:@project.id,theme_name:Project.NAME)%>|
<%= link_to 'Volver', projects_path, :class => "btn btn-danger"%>
<%= link_to 'Editar', edit_project_path(@project), :class => "btn btn-success" %>
