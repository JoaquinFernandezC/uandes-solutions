<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Goal number</th>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th>Estimated end date</th>
      <th>End date</th>
      <th>Privacy</th>
      <th>Log</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.year %></td>
        <td><%= goal.goal_number %></td>
        <td><%= goal.name %></td>
        <td><%= goal.description %></td>
        <td><%= goal.state %></td>
        <td><%= goal.estimated_end_date %></td>
        <td><%= goal.end_date %></td>
        <td><%= goal.privacy %></td>
        <td><%= goal.log %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

