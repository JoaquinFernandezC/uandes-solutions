<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-8">
    <p>
      <strong>Nombre:</strong>
      <%= @cause.name %>
    </p>

    <p>
      <strong>RUC:</strong>
      <%= @cause.ruc.number %>
    </p>

    <p>
      <strong>Descripción:</strong>
      <%= @cause.description %>
    </p>

    <p>
      <strong>Encargados:</strong>
      <% @cause.users.each do |manager| %>
        <p style="padding-left: 1vw"><%= manager.name %></p>
      <% end %>
    </p>

    <p>
      <strong>Fiscal:</strong>
      <%= @cause.prosecutor.name %>
    </p>

    <p>
      <strong>Oficina Regional:</strong>
      <%= @cause.regional_pros_office.region %>
    </p>


    <p>
      <strong>Personas:</strong>
      <% @cause.people.each do |person| %>
        <p style="padding-left: 1vw"><%= person.name %></p>
      <% end %>
    </p>

    <p>
      <strong>Personas Legales:</strong>
      <% @cause.legal_people.each do |legal_person| %>
        <p style="padding-left: 1vw"><%= legal_person.name %></p>
      <% end %>
    </p>

    <p>
      <strong>Privacidad:</strong>
      <%= @cause.privacy %>
    </p>

    <p>
      <strong>Estado:</strong>
      <%= @cause.state %>
    </p>

    <p>
      <strong>Fecha Estimada de Término:</strong>
      <%= @cause.estimated_end_date %>
    </p>



    <p>
      <strong>Fecha de Término:</strong>
      <%= @cause.end_date %>
    </p>
  </div>

  <div class="col-sm-4">
    <div class="card">
      <div class="card-header bg-info">
        <h4 class="text-white">Bitácora</h4>
      </div>
      <div class="card-body">
        <div class="row" style="background: #FFFFFF; max-height: 720px; overflow: auto">
          <% @log.log_entries.reverse_each do |log_entry| %>
            <div class="card" style="width: 100%">
              <div class="card-body">
                <p style="padding-left: 1vw">
                  <strong style="font-size: small"><%= log_entry.user.name %>:</strong><br/>
                  <i style="font-size: small"><%= log_entry.message %></i><br/>
                  <b style="font-size: x-small; float: right"><%= log_entry.created_at.strftime('%d/%m/%Y %H:%M') %></b>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Volver', causes_path, :class => "btn btn-danger"%>
<%= link_to 'Editar', edit_cause_path(@cause), :class => "btn btn-success" %>
<%= link_to 'Agregar Tarea', new_task_url(theme_id:@cause.id,theme_name:Cause.NAME), :class => "btn btn-info"%>