<%= form_with(model: cause, local: true) do |form| %>
  <% if cause.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cause.errors.count, "error") %> prohibited this cause from being saved:</h2>

      <ul>
      <% cause.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br/>

  <div class="form-group">
    <%= form.label :name, 'Nombre' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Descripción' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="col-sm-8">

    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :estimated_end_date, 'Fecha Estimada de Término'%><br/>
        <%= form.datetime_select :estimated_end_date %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :privacy, 'Privacidad' %>
    <%= form.select :privacy, (1..3).map {|i| [@privacy_levels[i - 1],i] }, {}, { class: 'form-control' } %>
  </div>


  <div class="field">
    <%= form.label :regional_pros_office_id %>
    <%= form.text_field :regional_pros_office_id %>
  </div>

  <div class="field">
    <%= form.label :ruc_id %>
    <%= form.text_field :ruc_id %>
  </div>

  <div class="field">
    <%= form.label :prosecutor_id %>
    <%= form.text_field :prosecutor_id %>
  </div>

  <div class="float-right float-down">
    <%= link_to 'Cancelar', iics_path, class: 'btn btn-danger' %>
    <%= form.submit 'Crear', class: 'btn btn-primary' %>
  </div>
<% end %>
