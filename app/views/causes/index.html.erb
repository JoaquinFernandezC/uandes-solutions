<div class="card">
  <div class="card-header bg-info">
    <div class="row">
      <div class="col-sm-11">
        <h1 class="text-white">Casos</h1>
      </div>
      <div class="col-sm-1">
        <%= link_to (fa_icon 'plus lg', style: 'color: #17a2b8'), new_cause_path, class: 'btn btn-light btn-lg float-right', style: 'margin: auto; display: block' %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row" style="background: #FFFFFF">
      <div class="col-sm-12 hidden-xs">
        <div class="container">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item ">
              <a class="nav-link active makeOrange" data-toggle="pill" href="#home">Mis Casos</a>
            </li>
          </ul>

          <div class="tab-content">
            <div id="home" class="tab-pane active">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>RUC</th>
                    <th>Encargados</th>
                    <th>Fiscal</th>
                    <th>Oficina Regional</th>
                    <th>Privacidad</th>
                    <th>Estado</th>
                    <th>Fecha Estimada TÃ©rmino</th>
                    <th colspan="3">Acciones</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @causes.each do |cause| %>
                    <tr>
                      <td><%= cause.name %></td>
                      <td><%= cause.ruc.number %></td>
                      <td><%= cause.users.map(&:name).join(', ') %></td>
                      <td><%= cause.prosecutor.name %></td>
                      <td><%= cause.regional_pros_office.region %></td>
                      <td><%= cause.privacy %></td>
                      <td><%= cause.state %></td>
                      <td><%= cause.estimated_end_date %></td>
                      <td><%= link_to cause do%>
                          <span class="fas fa-eye" aria-hidden="true"></span>
                          <%end%> |
                        <%= link_to edit_cause_path(cause)do %>
                          <span class="fas fa-edit" aria-hidden="true"></span>
                          <%end%>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>