<p id="notice"><%= notice %></p>

<h1>Causes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Regional pros office</th>
      <th>Description</th>
      <th>Privacy</th>
      <th>Ruc</th>
      <th>State</th>
      <th>Prosecutor</th>
      <th>Estimated end date</th>
      <th>Log</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @causes.each do |cause| %>
      <tr>
        <td><%= cause.name %></td>
        <td><%= cause.regional_pros_office %></td>
        <td><%= cause.description %></td>
        <td><%= cause.privacy %></td>
        <td><%= cause.ruc_id %></td>
        <td><%= cause.state %></td>
        <td><%= cause.prosecutor %></td>
        <td><%= cause.estimated_end_date %></td>
        <td><%= cause.log_id %></td>
        <td><%= link_to 'Show', cause %></td>
        <td><%= link_to 'Edit', edit_cause_path(cause) %></td>
        <td><%= link_to 'Destroy', cause, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

