<div class="card">
	<div class="card-header bg-info">
    <h2 class="text-white" style="margin-bottom: 0"><b>Bandeja de Tareas</b></h2>
	</div>
	<div class="card-body">
		<div class="row" style="background: #FFFFFF;">
			<div class="col-sm-3 hidden-xs" style="border-right:#FF8C00 solid 2px;">
		        <div class="btn-group-vertical btn-block" style="padding-top: 0.1vw; overflow: auto;">
					<%= link_to 'Administrar Usuarios', root_path, class: 'btn btn-outline-secondary' %>
