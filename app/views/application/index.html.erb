							<% end %>
							<th>Accion</th>
							<th colspan="300"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Comprar Globos</td>
							<td>Proyecto Avanza</td>
							<td>03/04/2019</td>
							<td class="text-danger">Urgente</td>
							<td>Secreto</td>
							<td><button type="button" class="btn btn-info" style="width:90px" onclick="alert('Aqui se entra a la tarea.')">Entrar</button></td>
						</tr>
						<tr>
							<td>Recopilacion Evidencia</td>
							<td>Caso Pinta</td>
							<td>30/12/2018</td>
							<td class="text-warning">Media</td>
							<td>Privado</td>
							<td><button type="button" class="btn btn-info" style="width:90px" onclick="alert('Aqui se entra a la tarea.')">Entrar</button></td>
						</tr>
						<tr>
							<td>Revisar Tarea</td>
							<td>Caso Farmaceuticas</td>
							<td>17/02/2019</td>
							<td>Baja</td>
							<td>Publico</td>
							<td><button type="button" class="btn btn-secondary" style="width:90px" onclick="alert('Aqui se revisa a la tarea.')">Revisar</button></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
