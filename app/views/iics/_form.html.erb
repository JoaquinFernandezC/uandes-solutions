<%= form_with(model: iic, local: true) do |form| %>
  <% if iic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(iic.errors.count, "error") %> prohibited this iic from being saved:</h2>

      <ul>
      <% iic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br/>

  <div class="form-group">
    <%= form.label :name, 'Nombre' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Descripción' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= form.label :internal_member_iics, 'Miembros Encargados' %>
        <%= form.select :employee_ids, User.all.pluck("CONCAT(users.first_name, ' ', users.last_name)", :id), {}, {multiple: true, class: 'selectizeType'} %>
      </div>

      <div class="form-group">
        <%= form.label :internal_member_iics, 'Miembros Internos' %>
        <%= form.select :employee_ids, User.all.pluck("CONCAT(users.first_name, ' ', users.last_name)", :id), {}, {multiple: true, class: 'selectizeType'} %>
      </div>

      <div class="form-group">
        <%= form.label :employee_ids, 'Miembros Externos' %>
        <%= form.select :employee_ids, Employee.joins(:person, :institution).pluck("CONCAT('(', institutions.name, ') ', people.name)", :id), {}, {multiple: true, class: 'selectize'} %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :start_date, 'Fecha de Inicio' %>
        <div class="form-group">
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
            <%= form.text_field :start_date, { class: 'form-control', type: 'type', 'data-toggle' => "datetimepicker1" } %>
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :estimated_end_date, 'Fecha Estimada de Término' %>
        <div class="form-group">
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
            <%= form.text_field :estimated_end_date, { class: 'form-control', type: 'type', 'data-toggle' => "datetimepicker1" } %>
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :end_date, 'Fecha de Término' %>
        <div class="form-group">
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
            <%= form.text_field :end_date, { class: 'form-control', type: 'type', 'data-toggle' => "datetimepicker1" } %>
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="form-group">
    <%= form.label :privacy, 'Privacidad' %>
    <%= form.select :privacy, (1..3).map {|i| [@privacy_levels[i - 1],i] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-check">
    <%= form.check_box :multilateral, class: 'form-check-input', type: 'checkbox' %>
    <%= form.label :multilateral, class: 'form-check-label' %>
  </div>

  <br/>
  <div class="float-right float-down">
    <%= link_to 'Cancelar', iics_path, class: 'btn btn-danger' %>
    <%= form.submit 'Crear', class: 'btn btn-primary' %>
  </div>
<% end %>


<div class="modal fade employee-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nuevo Empleado</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for Employee.new do |form| %>
          <div class="form-group">
            <%= form.label :person_id %>
            <%= form.select :person_id, Person.all.pluck(:name, :id), {}, { class: 'selectize' } %>
          </div>

          <div class="form-group">
            <%= form.label :institution_id %>
            <%= form.select :institution_id, Institution.all.pluck(:name, :id), {}, { class: 'selectize' } %>
          </div>

          <div class="form-group">
            <%= form.label :position %>
            <%= form.text_field :position, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
        <% end %>
    </div>
  </div>
</div>
