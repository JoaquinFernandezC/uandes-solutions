<div class="card">
  <div class="card-header bg-info">
    <div class="row">
      <div class="col-sm-11">
        <h1 class="text-white">Coordinaci√≥n Casos</h1>
      </div>
      <div class="col-sm-1">
        <%= link_to (fa_icon 'plus lg', style: 'color: #17a2b8'), new_case_coordination_path, class: 'btn btn-light btn-lg float-right', style: 'margin: auto; display: block' %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row" style="background: #FFFFFF">
      <div class="col-sm-12 hidden-xs">
        <div class="container">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item ">
              <a class="nav-link active makeOrange" data-toggle="pill" href="#home">Mis CC <b>(3)</b></a>
            </li>
          </ul>

          <div class="tab-content">
            <div id="home" class="tab-pane active">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>State</th>
                    <th>Estimated end date</th>
                    <th>Privacy</th>
                    <th colspan="3"></th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @case_coordinations.each do |case_coordination| %>
                    <tr>
                      <td><%= case_coordination.name %></td>
                      <td><%= case_coordination.description %></td>
                      <td><%= case_coordination.state %></td>
                      <td><%= case_coordination.estimated_end_date %></td>
                      <td><%= case_coordination.privacy %></td>
                      <td><%= link_to 'Show', case_coordination %></td>
                      <td><%= link_to 'Edit', edit_case_coordination_path(case_coordination) %></td>
                      <td><%= link_to 'Destroy', case_coordination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>