<div class="card">
  <div class="card-header bg-info">
    <div class="row">
      <div class="col-sm-11">
        <h1 class="text-white">Coordinación Casos</h1>
      </div>
      <div class="col-sm-1">
        <%= link_to (fa_icon 'plus lg', style: 'color: #17a2b8'), new_case_coordination_path, class: 'btn btn-light btn-lg float-right', style: 'margin: auto; display: block' %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row" style="background: #FFFFFF">
      <div class="col-sm-12 hidden-xs">
        <div class="container">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item ">
              <a class="nav-link active makeOrange" data-toggle="pill" href="#home">Mis CC</a>
            </li>
          </ul>

          <div class="tab-content">
            <div id="home" class="tab-pane active">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>RUCs</th>
                    <th>Encargados</th>
                    <th>Fiscales</th>
                    <th>Oficinas Regionales</th>
                    <th>Privacidad</th>
                    <th>Estado</th>
                    <th>Fecha Estimada Término</th>
                    <th colspan="3">Acciones</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @case_coordinations.each do |case_coordination| %>
                    <tr>
                      <td><%= case_coordination.name %></td>
                      <td><%= case_coordination.rucs.map(&:number).join(', ') %></td>
                      <td><%= case_coordination.users.map(&:name).join(', ') %></td>
                      <td><%= case_coordination.prosecutors.map(&:name).join(', ') %></td>
                      <td><%= case_coordination.regional_pros_offices.map(&:region).join(', ') %></td>
                      <td><%= case_coordination.privacy %></td>
                      <td><%= case_coordination.state %></td>
                      <td><%= case_coordination.estimated_end_date %></td>
                      <td><%= link_to case_coordination do%>
                          <span class="fas fa-eye" aria-hidden="true"></span>
                          <%end%> |
                        <%= link_to edit_case_coordination_path(case_coordination)do %>
                          <span class="fas fa-edit" aria-hidden="true"></span>
                          <%end%>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>