<div class="card">
  <div class="card-header bg-info">
    <h2 class="text-white"><b>Documentos</b></h2>
  </div>
  <div class="card-body">
    <div class="row" style="background: #FFFFFF;">
      <div class="col-sm-12 hidden-xs">
        <div class="table table-responsive ">
          <table id="myTable" class="table table-striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Versión</th>
                <th>Clasificación</th>
                <th>Tipo</th>
                <th>Acción</th>
              </tr>
            </thead>
            <tbody id="myTable">
              <% @documents.each do |document| %>
                <tr>
                  <td><%= document.name %></td>
                  <td><%= document.version %></td>
                  <td><%= document.classification %></td>
                  <td><%= document.docType %></td>
                  <td><%= link_to document do %>
                      <span class="fas fa-eye"></span>
                    <%end%> |
                    <%= link_to  "/tasks/"+document.id.to_s+"/edit" do %>
                      <span class="fas fa-edit"></span>
                    <%end%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/af-2.3.2/b-1.5.4/b-flash-1.5.4/b-html5-1.5.4/datatables.min.css"/>

