<p id="notice"><%= notice %></p>

<h1>Rucs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rucs.each do |ruc| %>
      <tr>
        <td><%= ruc.number %></td>
        <td><%= link_to 'Show', ruc %></td>
        <td><%= link_to 'Edit', edit_ruc_path(ruc) %></td>
        <td><%= link_to 'Destroy', ruc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ruc', new_ruc_path %>
