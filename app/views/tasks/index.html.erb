<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th>Start date</th>
      <th>Estimated end date</th>
      <th>End date</th>
      <th>Privacy</th>
      <th>Priority</th>
      <th>State</th>
      <th>Needs checking</th>
      <th>Log</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.user %></td>
        <td><%= task.start_date %></td>
        <td><%= task.estimated_end_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.privacy %></td>
        <td><%= task.priority %></td>
        <td><%= task.state %></td>
        <td><%= task.needs_checking %></td>
        <td><%= task.log %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

